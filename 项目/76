# 示例飞行任务
def perform_flight_mission():
    connect_drone()
    time.sleep(2)
    takeoff()
    time.sleep(5)
    move_forward(10)
    time.sleep(3)
    hover(2)
    time.sleep(3)
    rotate("left", 90)
    time.sleep(3)
    move_backward(5)
    time.sleep(2)
    land()
    time.sleep(2)
    disconnect_drone()

# 执行飞行任务
perform_flight_mission()
